#!/bin/bash
# wrestlingdb

# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail

# Sanity check command line options
usage() {
  echo "Usage: $0 (create|destroy|reset|dump)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi


# Parse argument.  $1 is the first argument
case $1 in
  "create")
    mkdir -p var
    sqlite3 var/wrestling.sqlite3 < sql/schema.sql
    sqlite3 var/wrestling.sqlite3 < sql/data.sql
    ;;
  "destroy")
    rm -rf var/wrestling.sqlite3 var
    ;;
  "reset")
    rm -rf var/wrestling.sqlite3 var
    mkdir -p var
    sqlite3 var/wrestling.sqlite3 < sql/schema.sql
    sqlite3 var/wrestling.sqlite3 < sql/data.sql
    ;;
  *)
    usage
    exit 1
    ;;

esac
